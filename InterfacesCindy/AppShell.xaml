<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="InterfacesCindy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:InterfacesCindy"
    Shell.FlyoutBehavior="Disabled"
    xmlns:pages="clr-namespace:InterfacesCindy"
    Title="Ceci est l'affichage de la page AppShell.xaml">
    
    
    <TabBar>
        <Tab Title="Mon Compte">
            <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" />
        </Tab>
        
        <Tab Title="Tutorat Disponible" >
            <ShellContent ContentTemplate="{DataTemplate pages:TutoratDisopPage}" />
        </Tab>
        
        <Tab Title="Fiche d'inscription">
            <ShellContent ContentTemplate="{DataTemplate pages:FicheDemandeTuto}" />
        </Tab>

    </TabBar>

</Shell>